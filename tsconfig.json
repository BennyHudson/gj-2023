{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@images/*": ["images/*"],
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@hooks/*": ["hooks/*"],
      "@mixins/*": ["mixins/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@themes/*": ["themes/*"],
      "@typings/*": ["typings/*"],
      "@utils/*": ["utils/*"],
      "@context/*": ["context/*"],
      "@queries/*": ["queries/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
